#!/usr/bin/env python

import os
import updatemyip as umip
import updatemyip.meta as meta
import updatemyip.plugin as plugin

xdg_config_home = os.getenv(
    "XDG_CONFIG_HOME", os.path.join(os.getenv("HOME"), ".config")
)
plugin_module_paths = [
    os.path.join(xdg_config_home, meta.NAME, "plugins",),
    os.path.join(os.sep, "etc", meta.NAME, "plugins"),
    plugin.PLUGIN_MODULE_BUILTIN_PATH,
]

dns_result = umip.main(plugin_module_paths)
if dns_result in (plugin.PLUGIN_STATUS_NOOP,
                  plugin.PLUGIN_STATUS_DRY_RUN,
                  plugin.PLUGIN_STATUS_SUCCESS):
    exit(0)
else:
    exit(1)
