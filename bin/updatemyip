#!/usr/bin/env python

import os
import random as rand
import updatemyip as umip
import updatemyip.meta as meta
import updatemyip.provider as pro

xdg_config_home = os.getenv(
    "XDG_CONFIG_HOME", os.path.join(os.getenv("HOME"), ".config")
)
pro.import_modules(
    os.path.join(xdg_config_home, meta.NAME, "providers",),
    os.path.join(os.sep, "etc", meta.NAME, "providers"),
    pro.PROVIDER_MODULE_BUILTIN_PATH,
)
default_address_providers = [
    "aws.CheckIP",
    "dyn.CheckIP",
    "google.CheckIP",
    "ipify.IPv4"
]
rand.shuffle(default_address_providers)
exit_code = umip.main(default_address_providers=default_address_providers)
exit(0) if exit_code < 0 else exit(exit_code)
